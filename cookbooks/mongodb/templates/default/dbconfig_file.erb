# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: <%= node['mongodb']['config']['systemLogPath'] %>

# Where and how to store data.
storage:
  dbPath: <%= node['mongodb']['config']['dbPath'] %>
  journal:
    enabled: true
#  engine:
#  mmapv1:
#  wiredTiger:

# how the process runs
processManagement:
  fork: true  # fork and run in background
  pidFilePath: <%= node['mongodb']['config']['pidFilePath'] %>  # location of pidfile

# network interfaces
net:
  port:   <%= node['mongodb']['config']['netPort'] %>
  bindIp: <%= node['mongodb']['config']['bindIp'] %>

